# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution(object):
    def addTwoNumbers(self, l1, l2):
        """
        :type l1: Optional[ListNode]
        :type l2: Optional[ListNode]
        :rtype: Optional[ListNode]
        """
        head = ListNode()
        temp = head
        carry = 0

        while (1) :

            if (l1!=None and l2!=None):
                carry = l1.val + l2.val + carry
                temp.val,carry = carry-(carry//10)*10 ,carry//10
                l1 = l1.next
                l2 = l2.next
                if (l1==None and l2==None):
                    break
            elif (l1==None):
                carry = l2.val + carry
                temp.val,carry = carry-(carry//10)*10 ,carry//10
                l2 = l2.next
                if l2==None:
                    break
            elif (l2==None):
                carry = l1.val + carry
                temp.val,carry = carry-(carry//10)*10 ,carry//10

                l1 = l1.next
                if l1==None:
                    break

            
            temp.next = ListNode()
            temp = temp.next
        
        if carry:
            temp.next = ListNode()
            temp = temp.next
            temp.val = carry
        return head

        
