# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution(object):
    def mergeTwoLists(self, list1, list2):
        """
        :type list1: Optional[ListNode]
        :type list2: Optional[ListNode]
        :rtype: Optional[ListNode]
        """
        if (list1 == None):
            return list2
        elif (list2 == None):
            return list1
        head = ListNode()
        temp = head
        while(True):
            if (list1 == None):
                temp.next = list2
                return head
            elif (list2 == None):
                temp.next = list1
                return head

            if (list1.val < list2.val):
                temp.val = list1.val
                list1 = list1.next
            else:
                temp.val = list2.val
                list2 = list2.next

            if (list1 != None and list2 != None):
                temp.next = ListNode()
                temp = temp.next
