class Solution(object):
    def findMedianSortedArrays(self, nums1, nums2):
        m, n = len(nums1), len(nums2)
        p1, p2 = [0], [0]   # use lists to make them mutable

        def get_min():
            if p1[0] < m and p2[0] < n:
                if nums1[p1[0]] < nums2[p2[0]]:
                    ans = nums1[p1[0]]
                    p1[0] += 1
                else:
                    ans = nums2[p2[0]]
                    p2[0] += 1
            elif p2[0] == n:
                ans = nums1[p1[0]]
                p1[0] += 1
            else:
                ans = nums2[p2[0]]
                p2[0] += 1
            return ans

        if (m + n) % 2 == 0:
            for _ in range((m + n) // 2 - 1):
                _ = get_min()
            return (get_min() + get_min()) / 2.0
        else:
            for _ in range((m + n) // 2):
                _ = get_min()
            return float(get_min())
