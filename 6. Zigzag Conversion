class Solution(object):
    def convert(self, s, numRows):
        """
        :type s: str
        :type numRows: int
        :rtype: str
        """
        if numRows == 1:
            return s
        i = 0
        st = ''
        while(i<len(s)):
            st = st + s[i]
            i = i+ numRows*2 -2
        j = 1
        for i in range(1,numRows-1):
            j = i
            while(j<len(s)):
                st = st+ s[j]
                l =  j + numRows*2 - i*2 -2
                if (l>=len(s)):
                    break
                st = st+s[l]
                j = j + numRows*2 - 2
        k = numRows-1
        while(k<len(s)):
            st = st + s[k]
            k = k + numRows*2 -2
        return st
