class Solution(object):
    def kLengthApart(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: bool
        """
        j = None
        for i in range(len(nums)):
            if (nums[i] == 1 and 0<j<=k):
                return False
            elif (nums[i]==1):
                j=1
            elif j!=None:
                j+=1
        return True
        
